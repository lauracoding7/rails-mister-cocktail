<h2> <%= @cocktail.name %></h2>
<ul>
<% @cocktail.doses.each do |dose| %>
    <li>
    <%= dose.description %>
    <% ingredient = Ingredient.find(dose.ingredient_id) %>
    <%= ingredient.name %>
    <%= link_to 'Delete', dose_path(dose),
    method: :delete,
    data: { confirm: "Are you sure?" }%>
    <% end %>
    </li>
</ul>
<p><%= link_to 'Add ingredients to cocktail', new_cocktail_dose_path(@cocktail) %></p>

<p><%= link_to 'Go back to see all cocktails', cocktails_path %></p>

